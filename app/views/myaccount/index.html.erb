    <div class="row">
      <button class="btn btn-primary btn-block col-md-2">   <%= link_to 'Edit', edit_realtor_path(@realtor), :class => "color_id"%> </button>
    </div>
    <br/><br/>
     <% end %>

  <% if session[:role] == "hunter" %>
    <%= link_to 'View Companies', { :controller => "companies", :action =>"index"} , :class => "btn btn-primary"%>&nbsp;&nbsp;&nbsp;
