
<h1>Advanced Search</h1>

<%= form_for @search, html:{class:"pure-form"} do  |s| %>

  <div class="field">
    <%= s.label :location %><br>
      <%= s.collection_select(:location,House.all, :id, :address, {:include_blank => "Please select location"}, {:class=>"col-md-4 control-label"})%>

    <br>
  </div>

  <div class="field">
    <%= s.label :min_sq_ft %><br>
    <%= s.text_field :min_sq_ft %><br>
  </div>

  <div class="field">
    <%= s.label :max_sq_ft %><br>
    <%= s.text_field :max_sq_ft %><br>
  </div>

  <div class="field">
    <%= s.label :min_price %><br>
    <%= s.text_field :min_price %><br>
  </div>

  <div class="field">
    <%= s.label :max_price %><br>
    <%= s.text_field :max_price %><br>
  </div>

  <div class="actions"><%= s.submit "Search", class:"pure-button pure-button-primary" %></div>

<%end %>

<p><%=link_to "Back",houses_path %></p>

